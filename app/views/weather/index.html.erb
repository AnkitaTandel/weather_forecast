<h1>Weather Forecast</h1>

<%= form_tag root_path, method: :get do %>
  <%= label_tag 'zip_code', 'Enter Zip Code:' %>
  <%= text_field_tag 'search[zip_code]', (params[:search][:zip_code] if params[:search]), required: true %>
  <%= submit_tag 'Get Forecast' %>
<% end %>

</br>
</br>
</br>
<% if @forecast.present? %>
  <table>
    <thead>
    </thead>
    <tbody>
      <% @forecast.each do |attribute, value| %>
        <tr>
          <td><%= attribute.to_s.humanize %></td>
          <td><%= value %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
